# This is a basic workflow to help you get started with Actions

name: Deploy GitHub Pages (with LFS videos)

on:
  push:
    branches: [main]
  workflow_dispatch:

permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: pages
  cancel-in-progress: true

jobs:
  deploy:
    runs-on: ubuntu-latest
    env:
      SITE_DIR: .
      MAX_ARTIFACT_MB: 900
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}

    steps:
      - name: Checkout repository (include LFS pointers)
        uses: actions/checkout@v4
        with:
          lfs: true

      - name: Pull real LFS files (mp4, etc.)
        run: git lfs pull

      - name: Optional size guard (fails early if too large)
        run: |
          set -euo pipefail
          SIZE_KB=$(du -sk "${SITE_DIR}" | awk '{print $1}')
          SIZE_MB=$((SIZE_KB / 1024))
          echo "Site size: ${SIZE_MB} MB"
          if [ "${SIZE_MB}" -gt "${MAX_ARTIFACT_MB}" ]; then
            echo "::error::Artifact too large: ${SIZE_MB} MB > ${MAX_ARTIFACT_MB} MB"
            find "${SITE_DIR}" -type f -print0 | xargs -0 du -m | sort -nr | head -n 20
            exit 1
          fi

      - name: Setup GitHub Pages
        uses: actions/configure-pages@v5

      - name: Upload Pages artifact (includes pulled mp4s)
        uses: actions/upload-pages-artifact@v3
        with:
          path: ${{ env.SITE_DIR }}

      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4

